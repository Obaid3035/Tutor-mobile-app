<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/myblack"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".Teacher.SignIn_UstaadActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USTAAD_JEE"
        android:gravity="center"
        android:textSize="45dp"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:textColor="@color/white"/>
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="80px"
        android:weightSum="2"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="80px"
                android:text="USTAAD"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:fontFamily="@font/nunito_sans_semibold"/>
            <View
                android:id="@+id/anime1"
                android:layout_width="90dp"
                android:layout_height="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="26dp"
                android:background="@color/mygreen"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/info_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="80px"
                android:text="STUDENT"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:fontFamily="@font/nunito_sans_semibold"/>
            <View
                android:id="@+id/anim"
                android:layout_width="90dp"
                android:layout_height="4dp"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:layout_marginLeft="31dp"
                android:background="@color/mygreen"/>


        </LinearLayout>

    </LinearLayout>


    <EditText
        android:id="@+id/etext_ustaad"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginHorizontal="100px"
        android:layout_marginVertical="50px"
        android:background="@drawable/all_rounded_textview"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingVertical="30px"
        android:paddingLeft="80px"
        android:textColorHint="@color/myblack"
        android:textSize="17sp" />


    <EditText
        android:id="@+id/pwtext_ustaad"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginHorizontal="100px"
        android:layout_marginVertical="50px"
        android:background="@drawable/all_rounded_textview"
        android:hint="Password"
        android:paddingVertical="30px"
        android:paddingLeft="80px"
        android:textColorHint="@color/myblack"
        android:textSize="18sp" />


    <Button
        android:id="@+id/btn_sign_in_ustaad"
        android:layout_width="match_parent"
        android:text="SIGN IN"
        android:layout_marginVertical="50px"
        android:layout_marginHorizontal="100px"
        android:paddingVertical="30px"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:layout_height="57dp">
    </Button>


    <TextView
        android:id="@+id/info_forgotpw_ustaad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:paddingVertical="50px"
        android:text="Forgot Password?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:fontFamily="@font/nunito_sans_semibold"></TextView>


    <TextView
        android:id="@+id/info_signup_ustaad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="50px"
        android:text="Not a Member? click here"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:fontFamily="@font/nunito_sans_semibold"></TextView>

</LinearLayout>