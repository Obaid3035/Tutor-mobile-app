<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ForgotPasswordActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USTAAD_JEE"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="300dp"
        android:textSize="45dp"
        android:fontFamily="@font/nunito_sans_semibold"
        android:textColor="@color/myblack"/>

    <EditText
        android:id="@+id/email_reset"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginHorizontal="100px"
        android:layout_marginVertical="50px"
        android:background="@drawable/all_rounded_textview"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingVertical="30px"
        android:paddingLeft="80px"
        android:textColorHint="@color/myblack"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:text="Recover"
        android:layout_marginVertical="50px"
        android:layout_marginHorizontal="100px"
        android:paddingVertical="30px"
        android:textSize="17sp"
        android:textColor="@color/myblack"
        android:background="@drawable/button_background"
        android:layout_height="57dp"/>




</LinearLayout>