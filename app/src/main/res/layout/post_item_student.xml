<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="cards main container">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Post_image_student"
                            android:layout_width="40dp"
                            android:layout_marginLeft="8dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="top"
                            android:src="@drawable/me" />

                        <TextView
                            android:id="@+id/textView_name_student"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:fontFamily="@font/nunito_sans_extrabold"
                            android:text="username"
                            android:textSize="20dp" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Subject:"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nunito_sans_extrabold"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/subject_post_student"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nunito_sans_extrabold"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Timing:"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nunito_sans_extrabold"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/timing_post_student"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nunito_sans_extrabold"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="100dp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_view_circle"
                        android:fontFamily="@font/nunito_sans_extrabold"
                        android:gravity="center"
                        android:text="4.5"
                        android:textColor="@color/myblue"
                        android:textSize="28dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:textSize="18dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/Description_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Im a Student of Ned University Looking for Tution."
                android:fontFamily="@font/nunito_sans_semibold"
                android:maxLines="0"
                android:textSize="18dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/showmore_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="show more"
                android:gravity="end"/>
            <TextView
                android:id="@+id/showless_student"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="show less"
                android:gravity="end"/>



        </LinearLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>